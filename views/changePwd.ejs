<%- include('includes/head.ejs') %>
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container">
      <div class="mt-4">
        <% if(message != '') { %>
            <div class="alert alert-warning mt-4" role="alert">
                <%= message %>
            </div>
        <% } %>
        <h4>
            Password change
            <p> <small class="text-muted">Create a new password</small></p>
        </h4>
      </div>
      <hr class="mb-5">
        <form action="/integration/user/<%= email %>" method="POST">

            <div class="form-group">
                <div class="mt-3">
                    <input type="password" autocomplete="off" class="form-control" id="oldPwd" placeholder="Enter old password" name="oldPwd" required>
                </div>
                <div class="mt-3">
                    <input type="password" autocomplete="off" class="form-control" id="newPwd" placeholder="Enter new password" name="newPwd" required>
                    <small id="passwordHelpBlock" class="form-text text-muted">
                        Your password must be 8-20 characters long, contain lower case and upper case letters, numbers, and must not contain spaces.
                      </small>
                </div>
                <div class="mt-3">
                    <input type="password" autocomplete="off" class="form-control" id="repeatPwd" placeholder="Confirm password" name="repeatPwd" required>
                </div>
            </div>

          <button type="submit" id="submitPassChange" class="btn btn-secondary btn-lg btn-block my-3">Submit</button>
        </form>
    </div>
    
<%- include('includes/end.ejs') %>